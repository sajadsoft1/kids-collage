# Laravel Application - Specific Configs Only
# Infrastructure configs (DB, Redis, Mail, etc) come from docker-compose environment

APP_NAME="Kids Collage"
APP_TIMEZONE=UTC
APP_LOCALE=fa
APP_FALLBACK_LOCALE=fa
APP_FAKER_LOCALE=en_US
APP_URL=https://dashboard.lilingo.ir
FRONTEND_URL=https://lilingo.ir

# Swagger
L5_SWAGGER_CONST_HOST=https://dashboard.lilingo.ir/api
L5_SWAGGER_GENERATE_ALWAYS=false
L5_SWAGGER_UI_PERSIST_AUTHORIZATION=true

# Telescope
TELESCOPE_ENABLED=false

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Session & Cache
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# FTP (for media library & ticket-chat attachments)
FTP_HOST=3117204815.cloudydl.com
FTP_USERNAME=pz22410
FTP_PASSWORD=
FTP_PORT=21
# Use SSL/TLS for FTP (FTPS). Set to false if server uses plain FTP.
FTP_SSL=true
# Base URL for serving files (e.g. https://dl.lilingo.ir)
FTP_URL=https://dl.lilingo.ir

# Media Library (spatie/laravel-medialibrary) → uses ftp_media; prefix = path on FTP
MEDIA_DISK=ftp_media
MEDIA_PREFIX=lilingo/media

# Ticket Chat attachments → uses ftp_ticket; path = full path on FTP when root is empty
TICKET_CHAT_DISK=ftp_ticket
TICKET_CHAT_ATTACHMENTS_PATH=ticket-chat/attachments

# Editor (TinyMCE) image uploads → uses tinymce disk (FTP: lilingo/editor)
EDITOR_DISK=tinymce
FTP_EDITOR_ROOT=public_html/lilingo/editor
BROADCAST_CONNECTION=reverb

# Modules
MODULE_TRANSLATION=true
MODULE_SEO=true
SHOW_FUTURE_MODULES=false

# SMS Providers
SMS_DEFAULT=kavenegar
SMS_FAILOVER=smsir,mellipayamac

KAVENEGAR_TOKEN=
KAVENEGAR_SENDER=3000xxxx

SMSIR_API_KEY=
SMSIR_SECRET_KEY=
SMSIR_SENDER=3000yyyy

MELLIPAYAMAK_USERNAME=
MELLIPAYAMAK_PASSWORD=
MELLIPAYAMAK_SENDER=3000zzzz

# Vite (for frontend build)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"
